# vim: filetype=editorconfig
root = true

[*]
max_line_length = 80
end_of_line = lf
charset = utf-8
insert_final_newline = true
indent_style = space
indent_size = 2
tab_width = 2
trim_trailing_whitespace = true

[*.py]
indent_size = 4
tab_width = 4

# Minified files shouldn't be changed
[**.min.*]
indent_style = ignore
insert_final_newline = ignore

[*.md]
indent_size = 4
tab_width = 4
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

# Batch files use tabs for indentation
[*.bat]
indent_style = tab

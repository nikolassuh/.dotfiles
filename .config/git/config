[commit]
    verbose = 2
[core]
    editor = vim
    # Windows uses both CR and LF endings for newlines
    # Linux and Mac only use LF char for newlines
    # Git can auto convert LF endings into CRLF when you checkout code with:
    #autocrlf = true
    # ^ you can set this to false if you are
    # a windows programmer working on a windows-only project
    # Git can auto convert CRLF to LF on commits
    autocrlf = input  # for linux/mac
    hooksPath = ~/.dotfiles/.config/.git-hooks
[credential]
    helper = cache --timeout 30000
[diff]
    tool = vimdiff
    submodule = log
    colorMoved = true
[difftool]
    prompt = false
[init]
    defaultBranch = main
    # templatedir = ~/.dotfiles/.config/git/templates
[mergetool]
    keepBackup = false
    prompt = false
[pull]
    rebase = true
[push]
    default = current
    recurseSubmodules = check
[submodule]
    recurse = true
[stash]
    showIncludeUntracked = true
[status]
    showUntrackedFiles = all
    # short = true
    showStash = true
    relativePaths = false # show path relative to git root, not to cwd

# git-delta config (https://github.com/dandavison/delta)
[core]
    pager = delta
[interactive]
    diffFilter = delta --color-only
[delta]
    navigate = true  # use n and N to move between diff sections
    dark = true      # or light = true, or omit for auto-detection
[merge]
    conflictStyle = zdiff3
